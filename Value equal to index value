//User function template for C++
// right Answer
class Solution{
public:

	vector<int> valueEqualToIndex(int arr[], int n) {
	    // code here
	    vector<int> ans;
	    for(int i=0;i<n;i++){
	        if(arr[i]==i+1){
	            ans.push_back(arr[i]);
	        }
	    }
	    return ans;
	}
};

// ans can be corrected in this approach but for a limited cases but for all cases ton work we can use 
class Solution{
public:

	vector<int> valueEqualToIndex(int arr[], int n) {
	    // code here
	    vector<int> ans;
	    for(int i=1;i<n-1;i++){
	        if(arr[i]==i+1){
	            ans.push_back(arr[i]);
	        }
	    }
	    return ans;
	}
};
